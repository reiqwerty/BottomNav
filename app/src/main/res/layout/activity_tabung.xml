<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BangunRuang.Tabung">

  <TextView
      android:id="@+id/tvTabung"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/rubikmedium"
      android:textColor="@color/Black"
      android:text="Tabung"
      android:textAlignment="center"
      android:textSize="50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imagesbangundatar"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:src="@drawable/tabung"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTabung" />

  <EditText
      android:id="@+id/etJariJari"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/custom_input"
      android:hint="Masukkan Jari Jari"
      android:inputType="number"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imagesbangundatar"/>

  <EditText
      android:id="@+id/etTinggi"
      android:layout_width="300dp"
      android:layout_height="50dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/custom_input"
      android:hint="Masukkan Tinggi"
      android:inputType="number"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/etJariJari" />

  <TextView
      android:id="@+id/tvHasil"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="15dp"
      android:fontFamily="@font/latoregular"
      android:textColor="@color/Black"
      android:text="Hasil"
      android:textSize="25dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toStartOf="@id/etHasil"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/etTinggi" />

  <EditText
      android:id="@+id/etHasil"
      android:layout_width="215dp"
      android:layout_height="50dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/custom_input"
      android:inputType="number"
      android:focusable="false"
      android:layout_marginRight="16dp"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/tvHasil"
      app:layout_constraintTop_toBottomOf="@+id/etTinggi" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnHitung"
      android:layout_width="130dp"
      android:layout_height="50dp"
      android:layout_marginTop="35dp"
      android:layout_marginRight="171dp"
      android:background="@drawable/custom_button"
      android:text="Hitung"
      android:textColor="@color/White"
      android:textSize="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvHasil" />

  </androidx.constraintlayout.widget.ConstraintLayout>